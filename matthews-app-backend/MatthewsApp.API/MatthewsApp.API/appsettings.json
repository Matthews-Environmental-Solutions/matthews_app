{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning"
    }
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:/Logs/Matthews/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedOrigins": "http://localhost:4200;https://develop.comdata.rs/MatthewsApp.API;http://localhost:8100;https://com.matthews.app",
  "Swagger": {
    "Authority": "https://matthewsenvironmental.i4connected.cloud/identity"
  },
  "OAuth2Introspection": {
    "Authority": "https://matthewsenvironmental.i4connected.cloud/identity",
    "Scope": "openid profile email api matthews.api",
    "ClientId": "i4connected.cremator"
  },
  "i4connectedApiUrl": "https://matthewsenvironmental.i4connected.cloud/api",
  "deviceListRefreshIntervalInMinutes": 1,
  "useDemoEntitiesOnly": true
}
